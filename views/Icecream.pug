extends layout

block content
  h1= title
  
  p Search results Icecream  
  p
  - let items = results 
    div(class="container-fluid")
        div(class="row")
            each v,index in items
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.flavour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}

  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
  